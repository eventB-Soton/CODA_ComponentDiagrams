<plugin>

   <extension
         point="org.eventb.emf.persistence.synchroniser">
      <emfPackage
            name="Components Package"
            nsURI="http://soton.ac.uk/models/eventb/components/2016">
         <synchroniser
               emf_class="Component"
               name="Component Synchroniser"
               rodin_id="ac.soton.eventb.emf.core.extension.persistence.serialisedExtension"
               synchroniser_class="ac.soton.eventb.emf.core.extension.persistence.SerialisedExtensionSynchroniser">
         </synchroniser>
         <synchroniser
               emf_class="Connector"
               name="Connector Synchroniser"
               rodin_id="ac.soton.eventb.emf.core.extension.persistence.serialisedExtension"
               synchroniser_class="ac.soton.eventb.emf.core.extension.persistence.SerialisedExtensionSynchroniser">
         </synchroniser>
      </emfPackage>
   </extension>

   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <file-association
            content-type="ac.soton.eventb.emf.core.extension.persistence.contentType"
            file-extensions="cmp">
      </file-association>
   </extension>
   
</plugin>
